@model OrderIndexVm

@if (!Model.CanConnect)
{
    <div class="p-3">
        <div class="alert alert-danger m-0">資料庫目前無法連線，請稍後再試。</div>
    </div>
}
else if (!Model.Items.Any())
{
    <div class="alert alert-warning m-3">資料庫連線成功，但目前沒有訂單。</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-sm m-0 table-hover">
            <thead class="thead-light">
                <tr>
                    <th style="width:140px">
                        <a href="@Url.Action("Index", new { Model.Query.Q, Model.Query.PaymentStatus, Model.Query.OrderStatus, DateFrom = Model.Query.DateFrom?.ToString("yyyy-MM-dd"), DateTo = Model.Query.DateTo?.ToString("yyyy-MM-dd"), Page = Model.Page, PageSize = Model.PageSize })" class="text-decoration-none">
                            訂單編號 <i class="fas fa-sort text-muted"></i>
                        </a>
                    </th>
                    <th style="width:160px">會員資訊</th>
                    <th style="width:160px">賣家資訊</th>
                    <th style="width:110px" class="text-right">
                        <a href="@Url.Action("Index", new { Model.Query.Q, Model.Query.PaymentStatus, Model.Query.OrderStatus, DateFrom = Model.Query.DateFrom?.ToString("yyyy-MM-dd"), DateTo = Model.Query.DateTo?.ToString("yyyy-MM-dd"), Page = Model.Page, PageSize = Model.PageSize })" class="text-decoration-none">
                            金額 <i class="fas fa-sort text-muted"></i>
                        </a>
                    </th>
                    <th style="width:110px">付款狀態</th>
                    <th style="width:120px">訂單狀態</th>
                    <th style="width:170px">
                        <a href="@Url.Action("Index", new { Model.Query.Q, Model.Query.PaymentStatus, Model.Query.OrderStatus, DateFrom = Model.Query.DateFrom?.ToString("yyyy-MM-dd"), DateTo = Model.Query.DateTo?.ToString("yyyy-MM-dd"), Page = Model.Page, PageSize = Model.PageSize })" class="text-decoration-none">
                            建立時間 <i class="fas fa-sort text-muted"></i>
                        </a>
                    </th>
                    <th style="width:120px" class="text-center">操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var o in Model.Items)
                {
                    <tr>
                        <td>
                            <code>@o.Code</code>
                            @if (o.VendorSummary.Count > 1)
                            {
                                <br /><small class="text-info">(<i class="fas fa-layer-group"></i> @o.VendorSummary.Count 個賣家)</small>
                            }
                        </td>
                        <td>
                            @o.MemberName<br />
                            <span class="text-muted small"></span>
                        </td>
                        <td>
                            @if (o.VendorSummary.Count == 1)
                            {
                                <span>@o.VendorSummary.First().VendorName</span>
                            }
                            else if (o.VendorSummary.Count > 1)
                            {
                                <small class="text-muted">多賣家訂單</small>
                                @foreach (var vendor in o.VendorSummary)
                                {
                                    <br /><small class="badge badge-secondary">@vendor.VendorName</small>
                                }
                            }
                        </td>
                        <td class="text-right">NT$ @o.Total.ToString("#,0")</td>

                        <!-- 顯示中文；data-* 保持英文值供上色 -->
                        <td>
                            <span class="badge badge-pay"
                                  data-pay="@(o.PaymentStatus?.Trim() ?? "")">
                                @Team.Backend.Constants.PaymentStatusOptions.Text(o.PaymentStatus)
                            </span>
                        </td>
                        <td>
                            @if (o.VendorSummary.Count == 1)
                            {
                                <span class="badge badge-status"
                                      data-status="@(o.OrderStatus?.Trim() ?? "")">
                                    @Team.Backend.Constants.OrderStatusOptions.Text(o.OrderStatus)
                                </span>
                            }
                            else
                            {
                                <small class="text-muted">分組狀態</small>
                                @foreach (var vendor in o.VendorSummary)
                                {
                                    <br /><small class="badge badge-status badge-sm"
                                               data-status="@(vendor.OrderStatus?.Trim() ?? "")">
                                        @Team.Backend.Constants.OrderStatusOptions.Text(vendor.OrderStatus)
                                    </small>
                                }
                            }
                        </td>

                        <td>@o.CreatedAt.ToString("yyyy/MM/dd HH:mm")</td>
                        <td class="text-center">
                            <div class="btn-group-vertical btn-group-sm">
                                <button class="btn btn-outline-primary btn-sm"
                                        data-toggle="modal"
                                        data-target="#detailModal"
                                        data-id="@o.Id"
                                        data-code="@o.Code"
                                        title="查看詳細">
                                    <i class="fas fa-eye"></i> 詳細
                                </button>
                                @if (o.VendorSummary.Count == 1)
                                {
                                    <button class="btn btn-outline-info btn-sm" 
                                            onclick="contactVendor('@o.VendorSummary.First().VendorName', @o.VendorSummary.First().SellerId)"
                                            title="聯絡賣家">
                                        <i class="fas fa-phone"></i> 聯絡
                                    </button>
                                }
                                else if (o.VendorSummary.Count > 1)
                                {
                                    <div class="btn-group dropup">
                                        <button type="button" class="btn btn-outline-info btn-sm dropdown-toggle" data-toggle="dropdown">
                                            <i class="fas fa-phone"></i> 聯絡
                                        </button>
                                        <div class="dropdown-menu">
                                            @foreach (var vendor in o.VendorSummary)
                                            {
                                                <a class="dropdown-item" href="#" onclick="contactVendor('@vendor.VendorName', @vendor.SellerId)">
                                                    @vendor.VendorName
                                                </a>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="d-flex align-items-center justify-content-between p-3">
        <div class="text-muted small">第 @Model.Page / @Model.TotalPages 頁</div>
        <nav>
            <ul class="pagination pagination-sm m-0">
                <li class="page-item @(Model.Page == 1 ? "disabled" : null)">
                    <a class="page-link" href="@Url.Action("Index", new { Model.Query.Q, Model.Query.PaymentStatus, Model.Query.OrderStatus, DateFrom = Model.Query.DateFrom?.ToString("yyyy-MM-dd"), DateTo = Model.Query.DateTo?.ToString("yyyy-MM-dd"), Page = Model.Page - 1, PageSize = Model.PageSize })">上一頁</a>
                </li>
                @for (var p = 1; p <= Model.TotalPages; p++)
                {
                    <li class="page-item @(p == Model.Page ? "active" : null)">
                        <a class="page-link" href="@Url.Action("Index", new { Model.Query.Q, Model.Query.PaymentStatus, Model.Query.OrderStatus, DateFrom = Model.Query.DateFrom?.ToString("yyyy-MM-dd"), DateTo = Model.Query.DateTo?.ToString("yyyy-MM-dd"), Page = p, PageSize = Model.PageSize })">@p</a>
                    </li>
                }
                <li class="page-item @(Model.Page == Model.TotalPages ? "disabled" : null)">
                    <a class="page-link" href="@Url.Action("Index", new { Model.Query.Q, Model.Query.PaymentStatus, Model.Query.OrderStatus, DateFrom = Model.Query.DateFrom?.ToString("yyyy-MM-dd"), DateTo = Model.Query.DateTo?.ToString("yyyy-MM-dd"), Page = Model.Page + 1, PageSize = Model.PageSize })">下一頁</a>
                </li>
            </ul>
        </nav>
    </div>
}
