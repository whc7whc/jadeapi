@{
    ViewData["Title"] = "會員等級管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- 匯入 Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">會員等級管理</h1>
        <div>
            <a href="/Coupons/CouponsManager" class="btn btn-secondary btn-sm mr-2">
                <i class="bi bi-arrow-left"></i> 回到優惠券
            </a>
            <button class="btn btn-primary btn-sm mr-2" data-toggle="modal" data-target="#levelModal">
                <i class="bi bi-plus-circle"></i> 新增等級
            </button>
        </div>
    </div>

    <!-- 等級列表查詢 -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">會員等級列表</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="levelsTable" class="table table-bordered table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th>等級名稱</th>
                            <th>需要金額</th>
                            <th>狀態</th>
                            <th>建立時間</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody id="levelsTableBody">
                        <!-- 數據將透過 JavaScript 載入 -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- 新增/編輯等級 Modal -->
<div class="modal fade" id="levelModal" tabindex="-1" aria-labelledby="levelModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="levelModalLabel">新增等級</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="levelForm">
                    <div class="form-group">
                        <label for="levelName" class="form-label">等級名稱 <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="levelName" name="LevelName" required maxlength="50">
                        <div class="invalid-feedback"></div>
                    </div>
                    <div class="form-group">
                        <label for="requiredAmount" class="form-label">需要金額 <span class="text-danger">*</span></label>
                        <input type="number" class="form-control" id="requiredAmount" name="RequiredAmount" min="0" required>
                        <div class="invalid-feedback"></div>
                    </div>
                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input" id="isActive" name="IsActive" checked>
                        <label class="form-check-label" for="isActive">啟用</label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
                <button type="button" class="btn btn-primary" id="saveLevelBtn">保存</button>
            </div>
        </div>
    </div>
</div>

<!-- 刪除確認 Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">確認刪除</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>您確定要刪除這個等級嗎？此操作無法復原。</p>
                <p class="text-muted">提醒：如果有會員正在使用此等級，就無法刪除。</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">確認刪除</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/membership-levels.js"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/coupon-styles.css" asp-append-version="true" />
}
