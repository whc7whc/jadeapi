@model MemberFullViewModel

<form id="editMemberForm" method="post">
    <div class="modal-header">
        <h5 class="modal-title" id="editMemberModalLabel">編輯會員</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
            <i class="fas fa-times text-danger fs-4 text-white"></i>
        </button>
    </div>

    <div class="modal-body">
        <input type="hidden" name="Member.Id" value="@Model.Member.Id" />

        <!-- Email -->
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" name="Member.Email" value="@Model.Member.Email" class="form-control" readonly />
        </div>

        <!-- 姓名 -->
        <div class="mb-3">
            <label for="name" class="form-label">姓名</label>
            <input type="text" name="Profile.Name" value="@Model.Profile.Name" class="form-control" required />
        </div>
        <!-- 帳號 -->
        @* <div class="mb-3">
            <label for="account" class="form-label">會員帳號</label>
            <input type="text" name="Profile.MemberAccount" value="@Model.Profile.MemberAccount" class="form-control" required />
        </div> *@

        <!-- 生日 -->
        <div class="mb-3">
            <label class="form-label">生日</label>
            <input type="date" name="Profile.BirthDate"
                   value="@(Model.Profile != null ? Model.Profile.BirthDate.ToString("yyyy-MM-dd") : "")"
                   class="form-control" />
            <span asp-validation-for="Profile.BirthDate"></span>
        </div>

        <!-- 性別 -->
        <div class="mb-3">
            <label asp-for="Profile.Gender" class="form-label"></label>
            <select asp-for="Profile.Gender" class="form-select" asp-items="ViewBag.GenderOptions">
                <option value="">-- 請選擇 --</option>
            </select>
            <span asp-validation-for="Profile.Gender" class="text-danger"></span>
        </div>







        <!-- 角色權限 -->
        <div class="mb-3">
            <label class="form-label">角色權限</label>
            <select name="Member.Role" class="form-select">
                @if (Model.Member.Role)
                {
                    <option value="true" selected>賣家</option>
                    <option value="false">一般會員</option>
                }
                else
                {
                    <option value="true">賣家</option>
                    <option value="false" selected>一般會員</option>
                }
            </select>
        </div>


        <!-- 會員等級 -->
        <div class="mb-3">
            <label class="form-label">會員等級</label>
            <select name="Member.Level" class="form-select">
                @if (Model.Member.Level == 1)
                {
                    <option value="1" selected>銅</option>
                    <option value="2">銀</option>
                    <option value="3">金</option>
                }
                else if (Model.Member.Level == 2)
                {
                    <option value="1">銅</option>
                    <option value="2" selected>銀</option>
                    <option value="3">金</option>
                }
                else if (Model.Member.Level == 3)
                {
                    <option value="1">銅</option>
                    <option value="2">銀</option>
                    <option value="3" selected>金</option>
                }
                else
                {
                    <option value="1">銅</option>
                    <option value="2">銀</option>
                    <option value="3">金</option>
                }
            </select>
        </div>


        <!-- 啟用狀態 -->
        <div class="mb-3">
            <label class="form-label">啟用狀態</label>
            <select name="Member.IsActive" class="form-select">
                @if (Model.Member.IsActive)
                {
                    <option value="true" selected>啟用</option>
                    <option value="false">停用</option>
                }
                else
                {
                    <option value="true">啟用</option>
                    <option value="false" selected>停用</option>
                }
            </select>
        </div>
    </div>

    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">儲存</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
    </div>
</form>
