@using Team.Backend.Models.ViewModels
@model UploadImageViewModel

<div class="container mt-4">
    <h2>圖片上傳</h2>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert @(Model.IsSuccess ? "alert-success" : "alert-danger")">
            @Model.Message
        </div>
    }

    <form asp-action="Upload" method="post" enctype="multipart/form-data" class="mt-3">
        <div class="mb-3">
            <label asp-for="ImageFile" class="form-label">選擇圖片</label>
            <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
        </div>

        <button type="submit" class="btn btn-primary">上傳圖片</button>
    </form>

    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <div class="mt-4">
            <h4>上傳結果：</h4>
            <img src="@Model.ImageUrl" alt="已上傳圖片" class="img-fluid" style="max-width: 500px;" />
            <p class="mt-2">
                <strong>圖片網址：</strong><br />
                <a href="@Model.ImageUrl" target="_blank">@Model.ImageUrl</a>
            </p>
        </div>
    }
</div>
